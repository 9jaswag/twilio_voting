<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div class="container">
    <h1 class="header">Vote for your favourite global sport.</h1>
    <main class="main-wrapper">
      <div class="nominees">
        <form action="">
          <div class="form-group">
            <label for="football" class="wrapper">
              Football
              <input type="radio" name="vote" id="football">
              <span class="checkmark"></span>
            </label>
          </div>
          <div class="form-group">
            <label for="basketball" class="wrapper">
              Basketball
              <input type="radio" name="vote" id="basketball">
              <span class="checkmark"></span>
            </label>
          </div>
          <div class="form-group">
            <label for="cricket" class="wrapper">
              Cricket
              <input type="radio" name="vote" id="cricket">
              <span class="checkmark"></span>
            </label>
          </div>

          <div class="form-group">
            <button type="submit">Vote</button>
          </div>
        </form>
      </div>
      <div class="chart">
        <canvas id="voteChart" width="400" height="400"></canvas>
      </div>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
  <script>
    var ctx = document.getElementById('voteChart').getContext('2d');
    var chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Football', 'Basketball', 'American Football'],
        datasets: [{
          label: '# of Votes',
          data: [12, 19, 3],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });
  </script>
</body>

</html>